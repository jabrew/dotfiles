title () {
  printf '\033k'
  printf $@
  printf '\033\\'
}

function rename_tab {
  # Note: May require tmux set-option -g set-titles on
  echo -ne "\033]0;"$@"\007"
}
rename_tab zsh

say () {
  printf '\x1bPtmux;\x1b\x1b]9;'
  printf $@
  printf "\x07\x1b\\"
}

